[include]
	path = ~/local.gitconfig
[gist]
	private = true
[credential]
	helper = manager
[core]
	editor = vim
	autocrlf = false
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	graph = log --left-right --graph --oneline
	root = "!f() { if [ \"$1\" == \"-r\" ] || [ \"$1\" == \"--relative\" ]; then git rev-parse --show-prefix; else git rev-parse --show-toplevel; fi }; f"
	cane = commit --amend --no-edit
	ls = log --oneline
	rh = reset --hard
	s = status
	co = checkout
	dt = difftool
	mt = mergetool
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
	keepBackup = false
[push]
	default = simple
